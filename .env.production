# Production Environment Variables
NODE_ENV=production

# Database Configuration (Update with your production database)
DB_HOST=your-production-db-host
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=nfxexchange
DB_PORT=3306

# Backend Configuration
NEXT_PUBLIC_BACKEND_PORT=443
NEXT_PUBLIC_BACKEND_URL=https://your-backend-domain.com

# Site Configuration
NEXT_PUBLIC_SITE_NAME=WC26 Exchange
NEXT_PUBLIC_SITE_URL=your-frontend-domain.com
SITE_DESCRIPTION=Cryptocurrency Exchange Platform
NEXT_PUBLIC_FRONTEND=true

# Security (Generate new secrets for production)
APP_ACCESS_TOKEN_SECRET=your-production-access-token-secret
APP_REFRESH_TOKEN_SECRET=your-production-refresh-token-secret
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d